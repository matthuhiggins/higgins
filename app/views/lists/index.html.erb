<h1>Matt's Lists</h1>

<ul>
  <% @lists.each do |list| %>
    <li>
      <div class="title">
        <%= link_to list.title, list %>
        (<%= link_to 'edit', edit_list_path(list) %>)
      </div>
      <div class="description">
        <%= list.description %>
      </div>
    </li>
  <% end %>
</ul>

<%= link_to 'New List', new_list_path %>
