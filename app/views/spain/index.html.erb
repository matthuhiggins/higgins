<% title 'Spain' %>

<style>
#spain.index p {
  font-family: Arial;
  font-size: 14px;
  padding-right: 100px;
}
#spain.index .menu_wrap {
  border-bottom: 1px solid #ccc;
  overflow: hidden;
  padding-bottom: 30px;
}

#spain.index .menu_wrap .map {
  float: left;
  margin-top: 10px;
}

#spain.index .menu_wrap .menu {
  float: left;
  width: 300px;
/*  margin-left: 14px;*/
}

#spain.index .menu_wrap .title {
  font-size: 30px;
  padding-bottom: 14px;
}

#spain.index .menu_wrap li {
  font-size: 17px;
  padding: 2px 0;
}

#spain.index .visits .title {
  font-size: 20px;
/*  font-weight: bold;*/
  padding: 30px 0 10px 0;
}
#spain.index .visits .image_array {
